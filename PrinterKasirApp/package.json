{
  "name": "printerkasirapp",
  "version": "1.0.6",
  "description": "Printer Kasir dengan QR & Public URL",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "build": {
    "appId": "com.yosua.printerkasir",
    "productName": "Printer Kasir App",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "ngrok",
        "to": "ngrok"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
